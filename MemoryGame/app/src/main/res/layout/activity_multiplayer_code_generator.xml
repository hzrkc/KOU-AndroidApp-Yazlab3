<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MultiplayerCodeGeneratorActivity"
    android:background="@drawable/background">

    <Button

        android:id="@+id/button_kat覺l"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="48dp"
        android:background="#99C2A690"
        android:backgroundTint="#99FFFFFF"
        android:onClick="kat覺l"
        android:text="Kat覺l"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_multi2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_multi2"
        app:layout_constraintTop_toBottomOf="@+id/button_multi2"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/CodeText"
        android:layout_width="273dp"
        android:layout_height="57dp"
        android:background="#95FFECCC"
        android:ems="10"
        android:hint="Kod Giriniz"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.359" />

    <Button

        android:id="@+id/button_odaKur"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="#99C2A690"
        android:backgroundTint="#B2676A6C"
        android:onClick="odaKur"
        android:text="Oda Kur"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.555" />

    <TextView
        android:id="@+id/TextView"
        android:layout_width="195dp"
        android:layout_height="45dp"
        android:background="#8DDAE0DB"
        android:text="Haf覺za Oynu"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.209" />

</androidx.constraintlayout.widget.ConstraintLayout>